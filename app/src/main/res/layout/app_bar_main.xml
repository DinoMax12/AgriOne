    <!-- FrameLayout to hold main content -->
    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- BottomNavigationView with custom styling -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:menu="@menu/dash_menu"  <!-- You should define this menu resource -->
    android:backgroundTintMode="screen"
    app:backgroundTint="@color/colorPrimary"  <!-- Make sure this is defined in colors.xml -->
    app:labelVisibilityMode="labeled"
    app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
